<div class="container">
	<h2>Sign in</h2>

	<%= form_for(resource, html: {class: "nice"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %>
	  <%= f.email_field :email, class: 'input-text' %></div><br />

	  <div><%= f.label :password %>
	  <%= f.password_field :password, class: 'input-text' %></div><br />

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me, class: 'custom checkbox' %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", class: 'nice small radius button' %></div>
	<% end %>

	<%= render "links" %>
</div>