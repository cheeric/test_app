<h2>Your Cart</h2>
<% if !current_user.carts.first %>
	<% current_user.carts.first = Cart.create(:user_id => current_user.id) %>
<% end %>

<h3>Products</h3>
	<table>
		<% current_user.carts.first.orders.each do |order| %>
			<tr>
				<th><%= order.product.name %></th>
				<th></th>
			</tr>
		<% end %>
	</table>